<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@color/appBackgroundColor"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/puchase_historyDetailsCardview"
        android:layout_below="@+id/toolbar"
        android:background="@color/appBackgroundColor"
        app:cardBackgroundColor="@color/payment_detail_bg"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/purchasehistoryPrimaryLayout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/transactionHistoryDetailRowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_gravity="center"
                    android:src="@drawable/audio_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/SubcriptionPrice_text"
                    android:text="Transaction"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        >

                        <TextView
                            android:id="@+id/showPricesimbolTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <TextView
                            android:id="@+id/showPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="299"

                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:textAppearanceMedium" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/successTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="end"

                        android:text="Successs"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/invoicename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_toRightOf="@+id/transactionDetailLayout"
                        android:gravity="center_vertical|left"
                        android:text="Invoice-"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor"/>
                    <TextView
                        android:id="@+id/order"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_toRightOf="@+id/transactionDetailLayout"
                        android:gravity="center_vertical|left"
                        android:text="Order-"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor" />
                    <TextView
                        android:id="@+id/planname"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:layout_toRightOf="@+id/transactionDetailLayout"
                        android:gravity="center_vertical|left"
                        android:text="Plan Name-"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/invoicenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MWRRTTYHHH"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor"/>
                    <TextView
                        android:id="@+id/ordernoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="txn_155mmjtty"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor"/>
                    <TextView
                        android:id="@+id/planNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="Pay per View"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textColor"/>



                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/textColor">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/transactionDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-April-2017"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/textColor"
                    />
                <TextView
                    android:id="@+id/transactiontime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:22 PM"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/textColor"
                    />

                <TextView
                    android:id="@+id/activeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="Active"
                    android:textColor="@color/textColor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/activeIconTextView"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_circle"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="@dimen/download_button_width"
        android:layout_height="wrap_content"
        android:id="@+id/transactionDownloadButton"
        android:background="@drawable/background_shape"
        android:text="DOWNLOAD"
        android:textColor="@color/buttonTextColor"
        android:layout_gravity="center"
        android:layout_below="@+id/puchase_historyDetailsCardview"/>

</LinearLayout>
