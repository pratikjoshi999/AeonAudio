<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/saplashscreen2"
    android:orientation="vertical">

   <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="@dimen/login_layout_image_width"
                android:layout_height="@dimen/login_layout_image_height"
                android:layout_below="@id/toolbar"
                android:layout_marginBottom="24dp"

                android:layout_gravity="center"
                android:background="@drawable/studio" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:paddingLeft="40dp"

                    android:paddingRight="40dp">


                    <EditText
                        android:id="@+id/editEmailStr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="9dp"
                        android:drawablePadding="10dp"
                        android:paddingStart="24dp"
                        android:hint="Enter Your Email Address"
                        android:background="@drawable/shape_editttext"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/editTextColor"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp" />
                    <Button
                        android:id="@+id/submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/editEmailStr"
                        android:textAllCaps="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:foreground="?selectableItemBackground"
                        android:background="@drawable/background_shape"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@android:color/white" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/editEmailStr"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">


                        <TextView
                            android:id="@+id/loginTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/shape_editttext"
                            android:foreground="?selectableItemBackground"
                            android:textColor="@color/buttonTextColor"
                            android:textSize="18dp" />


                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
