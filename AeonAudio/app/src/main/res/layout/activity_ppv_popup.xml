<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pageTitleColor"
            android:text="Select Your Option"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrow Completeseason"
                android:textSize="15dp"
                android:button="@drawable/radiobutton_style"
                android:textColor="#afafaf"
                android:id="@+id/completeRadioButton"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alreadyHaveALoginButtonTextColor"
                android:text="$07.00"
                android:textSize="15dp"
                android:gravity="right"
                android:id="@+id/completePriceTextView"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrow Season3"
                android:textSize="15dp"
                android:button="@drawable/radiobutton_style"
                android:textColor="#afafaf"
                android:id="@+id/seasonRadioButton"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alreadyHaveALoginButtonTextColor"
                android:text="$05.00"

                android:textSize="15dp"
                android:gravity="right"
                android:id="@+id/seasonPriceTextView"
                android:paddingRight="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrow  S03  E01"
                android:textSize="15dp"
                android:button="@drawable/radiobutton_style"
                android:textColor="#afafaf"
                android:id="@+id/episodeRadioButton"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alreadyHaveALoginButtonTextColor"
                android:text="$03.00"
                android:textSize="15dp"
                android:gravity="right"
                android:id="@+id/episodePriceTextView"

                android:paddingRight="30dp"/>
        </LinearLayout>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button_radious"
            android:text="Pay Now"
            android:textSize="14dp"
            android:layout_marginBottom="20dp"
            android:stateListAnimator="@null"
            android:id="@+id/payNowButton"
            android:textColor="@color/buttonTextColor"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/alreadyHaveALoginButtonTextColor" />
    </LinearLayout>
</LinearLayout>