<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:playpauseview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:elevation="4dp"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/Progress_music_sliderpanel"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#06000000"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:progressTint="#e21313"
        android:thumb="@null" />

    <RelativeLayout
        android:id="@+id/slidepanelchildtwo_topviewtwo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@mipmap/ic_launcher"
            android:elevation="4dp">


            <ImageView
                android:id="@+id/albumArt_player"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="#b9b0ab"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/song_p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="SomeThing Inthe air"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/song_p_Albumname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/song_p_name"
                    android:fontFamily="serif-monospace"
                    android:text="by-Tyler Swift"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#605555" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:gravity="center"

        android:text="demo Text"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"

        android:gravity="center"
        android:text="demo Text"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"

        android:gravity="center"
        android:text="demo Text"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="demo Text"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:gravity="center"

        android:text="demo Text"
        android:textColor="@color/colorPrimaryDark" />
</LinearLayout>